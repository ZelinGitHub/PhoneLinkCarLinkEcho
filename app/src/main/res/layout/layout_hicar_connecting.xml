<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <RelativeLayout
        android:id="@+id/hicar_usb_connecting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/hicar_connecting_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/hicar_connecting_anim" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/hicar_connecting_phone_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hicar_usb_connecting_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/hicar_connecting_text_margintop"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huawei_hicar_ap_connecting"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:textSize="@dimen/hicar_text_size36" />

        <TextView
            android:id="@+id/hicar_connecting_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huawei_hicar_ap_connecting"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/hicar_text_size36" />
    </LinearLayout>


</RelativeLayout>
