<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="528dp"
        android:layout_height="276dp">

    <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/flight_card_back"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginTop="30dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_desktop_shoujihulian_nor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/tv_title"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机互联"
            android:textColor="#8FFFFFFF"
            android:textSize="24sp" />


    <!---->
    <TextView
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接手机后使用"
            android:textColor="#E3FFFFFF"
            android:textSize="28sp" />

    <Button
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/tv_connect"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            android:id="@+id/btn_connect"
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:text="去连接"
            android:background="#12FFFFFF"
            android:textColor="#E3FFFFFF"
            android:textSize="28sp" />
    <!---->
    <TextView
            android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            android:id="@+id/tv_no_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无日程信息"
            android:visibility="gone"
            android:textColor="#8FFFFFFF"
            android:textSize="36sp" />
    <!--    -->
    <TextView
            android:visibility="gone"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            android:id="@+id/tv_flight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#8FFFFFFF"
            android:textSize="24sp" />

    <TextView
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_title"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            android:id="@+id/tv_flight_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E3FFFFFF"
            android:textSize="48sp" />

    <TextView
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_start_time"
            app:layout_constraintStart_toStartOf="@id/iv_icon"
            android:id="@+id/tv_flight_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E3FFFFFF"
            android:textSize="28sp" />
</androidx.constraintlayout.widget.ConstraintLayout>