<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack">

    <ImageView
        android:id="@+id/img_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/hicar_bt_icon_margintop"
        android:src="@mipmap/hicar_bt"/>

    <TextView
        android:id="@+id/tv_bt_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_bt"
        android:layout_marginTop="@dimen/hicar_bt_open_tips_margintop"
        android:text="@string/huawei_hicar_bt_open"
        android:textSize="@dimen/hicar_text_size36"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bt_open"
        android:layout_centerHorizontal="true"
        android:text="@string/huawei_hicar_bt_tips"
        android:textSize="@dimen/hicar_text_size32"
        android:textColor="@color/colorWhite60"
        />

</RelativeLayout>