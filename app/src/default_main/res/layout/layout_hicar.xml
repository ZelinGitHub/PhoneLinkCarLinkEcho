<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/project_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center">

        <com.huawei.hicarsdk.HiSightSurfaceView
                android:id="@+id/surface"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:focusableInTouchMode="true"
                android:scrollbars="vertical" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/layout_connecting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center"
            android:visibility="gone">

        <include
                layout="@layout/layout_hicar_connecting"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </RelativeLayout>

    <ImageView
            android:id="@+id/hicar_trans_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_changan_transition_new"
            android:visibility="visible" />

    <LinearLayout
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:textSize="25sp"
                android:id="@+id/btn_to_previous"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:text="上一曲" />

        <Button
                android:textSize="25sp"
                android:id="@+id/btn_play_or_pause"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:text="播放/暂停" />

        <Button
                android:textSize="25sp"
                android:id="@+id/btn_to_next"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:text="下一曲" />
    </LinearLayout>
    <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    <com.wt.phonelink.carlink.DragImageView
            android:id="@+id/iv_close"
            android:layout_width="253dp"
            android:layout_height="260dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/close_big" />
</RelativeLayout>